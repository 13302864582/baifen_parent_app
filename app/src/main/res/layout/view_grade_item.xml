<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_marginTop="8dip"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/grade_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"          
        android:background="@drawable/wo_heng_inf_bg"
        android:text="@string/text_grade_middle"
        android:textColor="#242424"
        android:textSize="20sp" 
        android:gravity="center"
        />

    <TextView
        android:id="@+id/grade_line"
        android:layout_width="1dip"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginStart="10dip"
        android:layout_marginTop="10dip"
        android:layout_below="@id/grade_title_tv"
        android:layout_toEndOf="@id/grade_title_tv"
        android:background="#c4c4c4"
        android:visibility="gone"         
        />

    <TableLayout
        android:id="@+id/grade_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"     
        android:layout_below="@+id/grade_title_tv"
        android:orientation="horizontal" >
    </TableLayout>

</RelativeLayout>