<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#00000000"
    android:minHeight="555dp"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2666dp"
        android:layout_weight="111" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/blank_layout_input_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/recording_tv_input_view"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:background="#36cac9"
        android:gravity="center"
        android:text="@string/recording_text"
        android:textColor="#e2543c"
        android:textSize="12sp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white" >

        <LinearLayout
            android:id="@+id/voice_input_layout_input_view"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@android:color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/choice_text_btn_input_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="19dp"
                android:paddingRight="10dp"
                android:src="@drawable/choic_text_input_selector" />

            <Button
                android:id="@+id/record_btn_input_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:background="@drawable/click_start_record_btn_selector"
                android:text="@string/click_to_record_text" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/text_input_layout_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="65dp"
            android:padding="5dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/choice_voice_btn_input_view"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:contentDescription="@null"
                android:src="@drawable/bg_chat_voice_selector" />

            <Button
                android:id="@+id/input_sure_btn_input_view"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/bg_normal_btn_selector"
                android:gravity="center"
                android:tag="0"
                android:text="@string/text_nav_cancel"
                android:textColor="@color/bg_normal_btn_text_color_selector" />

            <EditText
                android:id="@+id/text_input_et_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toLeftOf="@id/input_sure_btn_input_view"
                android:layout_toRightOf="@id/choice_voice_btn_input_view"
                android:background="@drawable/bg_edittext"
                android:gravity="bottom"
                android:inputType="text"
                android:maxHeight="95dip"
                android:minHeight="40dp"
                android:padding="6dp"
                android:singleLine="false" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>