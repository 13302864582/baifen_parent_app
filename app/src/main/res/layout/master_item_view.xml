<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/master_item_bg_selector"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/master_item_iv_head_icon"
                android:layout_width="@dimen/master_list_icon_size"
                android:layout_height="@dimen/master_list_icon_size"
                android:layout_centerInParent="true"
                android:adjustViewBounds="false"
                android:clickable="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/default_contact_image" />

            <com.daxiong.fun.function.course.view.RedDotView
                android:id="@+id/master_item_rv_head_reddot"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/student_remind_icn"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="11"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/master_item_tv_stuname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/master_item_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/bg_red_round_border"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="@string/master_item_tv_state"
                    android:textColor="#ff1d1d"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/master_item_tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#36c9c9"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/master_item_tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#36c9c9"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/master_item_tv_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#36c9c9"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/master_item_tv_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#808080" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="21dp"
            android:src="@drawable/class_more_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/master_lv_bg" />

</LinearLayout>