<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="141dp"
    android:background="#ffffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddf"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#dddddf"/>
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/yuanjiao" />
          <ImageView
            android:id="@+id/iv_show2"
            android:layout_width="117dp"
            android:layout_height="117dp"
            android:layout_margin="12dp"
              android:scaleType="fitXY"
              android:src="@drawable/black"
            />


        <LinearLayout
            android:id="@+id/ll_duicuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="30dp">


            <TextView
                android:id="@+id/tv_dui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:drawableLeft="@drawable/form_correct_icon"
                android:gravity="center"
                android:textColor="#ffffff"

                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_cuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:drawableLeft="@drawable/form_error_icon"
                android:gravity="center"

                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_kemu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/form_course_biology_icon" />

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:alpha="0.8"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/rl_left"
        android:src="@drawable/ic_jiazhang" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/iv_head"
        android:text="何老师"
        android:textColor="#1e1e1e"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_head"

        android:textColor="#8d8d8d"
        android:textSize="11sp" />


    <LinearLayout
        android:id="@+id/ll_huidazhuangtai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_head"

        android:layout_below="@+id/tv_time"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_huidadongzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#1e1e1e"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_zuoyezhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#22C00D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_huidazhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#1e1e1e"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_zuoyejieguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_huidazhuangtai"

        android:layout_below="@+id/ll_huidazhuangtai"
        android:layout_marginRight="12dp"



        android:textColor="#1e1e1e"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_jindu"
        android:layout_width="206dp"
        android:layout_height="18dp"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_alignLeft="@+id/iv_head"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_jindu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/form_slider_bg_icon"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jindu"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/form_slider_icon"
            android:orientation="horizontal">

        </LinearLayout>


        <TextView
            android:id="@+id/tv_jindu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="批改中..."
            android:textColor="#ffffff"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_biaoqian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_left"
        android:layout_marginBottom="12dp"
        android:layout_alignLeft="@+id/iv_head"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_biaoqian1"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/home_page_lable_yellow_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#f7d430"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_biaoqian2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/home_page_lable_blue_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#11bdf5"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_biaoqian3"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:background="@drawable/home_page_lable_green_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#4dc350"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>















