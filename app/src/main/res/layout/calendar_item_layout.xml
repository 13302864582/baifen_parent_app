<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="21dp"
                android:src="@drawable/time_icon" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10月19日  星期二"
                android:textSize="12sp" />
          
        </LinearLayout>

        <TextView
            android:id="@+id/tv_meifati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="今日未发布任何疑问"
            android:textColor="#E26C1C"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/teacher_state"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/time_icon" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp" >

                    <TextView
                        android:id="@+id/tv_huidazhuangtai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="一大波老师正准备为您解题"
                        android:textSize="12sp"
                        android:visibility="gone" />
   
                    <LinearLayout
                        android:id="@+id/ll_pigai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp" >

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="何老师"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_zhuangtai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="完成批改"
                                android:textColor="#E26C1C"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_hwqu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="您的作业"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                             android:id="@+id/ll_haoshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_haoshi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总耗时"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_shichang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_toRightOf="@+id/tv_haoshi"
                                android:text="9分32秒"
                                android:textColor="#E26C1C"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_click"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="111dp" >

                <ImageView
                    android:id="@+id/iv_show"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                  android:scaleType="centerCrop"
                    android:background="#ECECEC"
                    android:src="@drawable/load_img" />

                    <TextView
                    android:id="@+id/tv_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_show"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/iv_show"
                    android:background="@drawable/encourage_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="3dp"
                    android:paddingTop="2dp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_show"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_show"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_beicui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="哎呀！悲催"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_jindu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:src="@drawable/correcting_icon" />

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/progressbar_bg" >

                            <ImageView
                                android:id="@+id/iv_jindu"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/progressbar_40img" />

                            <TextView
                                android:id="@+id/tv_jindu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="批改中..."
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_duicuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_dui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/right_icon"
                            android:text="  15"
                            android:textColor="#01A3A5"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_cuo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@drawable/wrong_icon"
                            android:text="  2"
                            android:textColor="#F0750D"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_zhengquelv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正确率:"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_zhengquelv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="100%"
                            android:textColor="#01A3A5"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>