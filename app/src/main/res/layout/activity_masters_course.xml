<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/master_title"
        layout="@layout/welearn_header_view" />

    <LinearLayout
        android:id="@+id/master_ll"
        android:layout_width="match_parent"
        android:layout_height="47.5dip"
        android:background="#0a9f9f"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/master_tv_mycourse"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_text_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/master_tv_mycourse"
            android:textColor="@color/master_tab_gotfocus"
            android:textSize="15sp" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#3bb2b2" />

        <TextView
            android:id="@+id/master_tv_teachercourse"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_text_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/master_tv_teachercourse"
            android:textColor="@color/master_tab_losefocus"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/master_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>