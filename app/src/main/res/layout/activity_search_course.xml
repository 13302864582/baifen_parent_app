<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/search_course_title"
        layout="@layout/welearn_header_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68.5dp"
        android:background="#f5f5f5" >

        <Button
            android:id="@+id/search_course_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_btn_selector"
            android:gravity="center"
            android:text="@string/search_bt"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/search_course_et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12.5dp"
            android:layout_toLeftOf="@id/search_course_bt"
            android:background="@drawable/students_input_bg"
            android:drawableLeft="@drawable/search_class_input_selector"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:hint="@string/search_course_et_input_hint"
            android:paddingLeft="11dp"
            android:textColor="#808080"
            android:textCursorDrawable="@drawable/input_article"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a9b5be" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/search_course_tv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginTop="13dp"
            android:text="@string/search_course_tv_warn"
            android:textColor="#808080"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/search_course_ll_content2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46.5dp"
                android:background="#f5f5f5"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/search_course_tv_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21.5dp"
                    android:textColor="#808080"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/search_course_tv_result2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#808080"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a9b5be" />

            <ListView
                android:id="@+id/search_course_xlv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" >
            </ListView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>