<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background_color"
    android:orientation="vertical"

    >

    <include
        layout="@layout/welearn_header_view"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--第一部分 start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/login_line"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rl_msg_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:background="@drawable/selector_layout_setting"
                    android:clickable="true"
                    android:focusable="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="15dip"
                        android:text="@string/message_settings"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_setting_jump" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dip"
                        android:gravity="center_vertical"
                        android:text="@string/voice"
                        android:textColor="#686868"
                        android:textSize="15sp" />

                    <com.daxiong.fun.view.SegmentedControl
                        android:id="@+id/allowMsgNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dip"
                        android:textColor="#6B6B6B"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="8dip"
                    android:background="#f2f2f2"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dip"
                        android:gravity="center_vertical"
                        android:text="@string/vibration"
                        android:textColor="#686868"
                        android:textSize="15sp" />

                    <com.daxiong.fun.view.SegmentedControl
                        android:id="@+id/allowMsgVibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="13dip"
                        android:textColor="#6B6B6B"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>
            <!--第一部分 end-->

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dp"
                android:background="@color/colore5e5e5" />
            <!--第二部分 start-->
            <RelativeLayout
                android:id="@+id/rl_not_distur_setting"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:background="@drawable/selector_layout_setting"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:text="@string/dnd_settings"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_setting_jump" />
            </RelativeLayout>
            <!--第二部分 end-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="15dp"
                android:background="@color/colore5e5e5" />
            <!--第三部分 start-->
            <RelativeLayout
                android:id="@+id/rl_clear_cache"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:background="@drawable/selector_layout_setting"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip"
                    android:text="@string/cache_settings"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_show_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:textColor="@color/color8d8d8d"
                    android:text=""
                    android:textSize="14sp" />
            </RelativeLayout>
            <!--第三部分 end-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/login_line" />

        </LinearLayout>
        </LinearLayout>



        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="16dp"
            android:background="@color/login_line" />

        <RelativeLayout
            android:id="@+id/rl_about_app"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:background="@drawable/selector_layout_setting"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_setting_jump" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/login_line" />

        <!--检查更新start-->
        <RelativeLayout
            android:id="@+id/check_update"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:background="@color/white"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="15dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_updata"
                        android:textColor="#555555"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/tips_update_iv_setting"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_unread_redpoint"
                        android:visibility="invisible" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_setting_jump" />
        </RelativeLayout>
        <!--检查更新end-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="15dp"
            android:background="@color/login_line"
            android:visibility="gone" />
        <!--用户反馈start-->
        <RelativeLayout
            android:id="@+id/user_respone_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"

                android:text="@string/user_feedback"
                android:textColor="#555555"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_setting_jump" />
        </RelativeLayout>
        <!--用户反馈 end-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#e6e6e6"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:visibility="visible">


            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_login_btn"
                android:gravity="center"
                android:minHeight="45dp"
                android:text="@string/text_logout"
                android:textColor="@color/selector_logout_font"
                android:textSize="16sp" />

        </RelativeLayout>


</LinearLayout>