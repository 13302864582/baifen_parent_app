<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edu_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/itme_nv_icon"
        android:layout_width="@dimen/itme_nv_icon"
        android:layout_height="@dimen/itme_nv_icon"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:clickable="true"
        android:src="@drawable/ic_default_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_weight="1000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/itme_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:text="小莫小莫小莫小莫小莫小莫"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/itme_tv_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxLength="7"
                android:text="莫老师补师补师补习班"
                android:textColor="#f58f4b"
                android:visibility="gone"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp" >

            <TextView
                android:id="@+id/itme_tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小莫"
                android:textColor="#6d6d6d"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/itme_tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="小莫"
                android:textColor="#6d6d6d"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/itme_tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxWidth="140dp"
                android:singleLine="true"
                android:text="撒撒范德萨发大股东方大哥大范甘迪"
                android:textColor="#6d6d6d"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:src="@drawable/class_more_icon" />

</LinearLayout>