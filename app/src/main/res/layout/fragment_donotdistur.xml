<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/login_background_color"
    android:orientation="vertical">

    <include layout="@layout/welearn_header_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/login_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sksjmdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:gravity="center_vertical"
                    android:text="@string/set_class_time_dnd"
                    android:textColor="#242424"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_sksjmdr"
                    android:layout_below="@id/tv_sksjmdr"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dip"
                    android:text="@string/set_turn_off_the_sound_and_vibration"
                    android:textColor="#9e9e9e"
                    android:textSize="11sp" />

            </LinearLayout>


            <com.daxiong.fun.view.SegmentedControl
                android:id="@+id/day_time_segmentedcontrol_donotdis"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dip"
                android:textColor="#6B6B6B"
                android:textSize="15sp"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/tg_shangkeshijian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dip"
                android:background="@android:color/transparent"
                android:button="@drawable/selector_message_setting"
                android:checked="true"
                android:gravity="center"
                android:text=""
                android:textOff=""
                android:textOn="" />


        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dip"
            android:background="@color/colore5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_xxsjmdr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dip"
                    android:gravity="center_vertical"
                    android:text="@string/set_dnd_breaks"
                    android:textColor="#242424"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_xxsjmdr"
                    android:layout_below="@id/tv_xxsjmdr"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dip"
                    android:text="@string/set_turn_off_the_sound_and_vibration_23_6"
                    android:textColor="#9e9e9e"
                    android:textSize="11sp" />
            </LinearLayout>

            <com.daxiong.fun.view.SegmentedControl
                android:id="@+id/night_time_segmentedcontrol_donotdis"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dip"
                android:textColor="#6B6B6B"
                android:textSize="15sp"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/tg_xiuxishijian_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dip"
                android:background="@android:color/transparent"
                android:button="@drawable/selector_message_setting"
                android:checked="true"
                android:gravity="center"
                android:text=""
                android:textOff=""
                android:textOn="" />


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="0dip"
        android:background="@color/login_line" />

</LinearLayout>