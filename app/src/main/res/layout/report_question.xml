<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent">

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dip"
                android:layout_marginTop="15dip"
                android:text="选择拒绝理由"
                android:textSize="20sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"

                android:background="#c5c5c5" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:button="@null"
                    android:text="答案错误"
                    android:drawableLeft="@drawable/selector_jujue_btn"
                    android:drawablePadding="12dp"
                    android:textColor="#4d4d4d"

                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="12dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_jujue_btn"
                    android:text="讲解过于简单"
                    android:textColor="#4d4d4d"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="12dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_jujue_btn"
                    android:text="图片与问题无关"
                    android:textColor="#4d4d4d"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"

                android:background="#c5c5c5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_camera_popupwindow_cancel"
                    android:textColor="#1e1e1e"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"

                    android:background="#c5c5c5" />

                <TextView
                    android:id="@+id/report_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="#57be6a"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>