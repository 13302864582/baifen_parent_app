<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@drawable/bg_gasview_item_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/avatar_iv_search_friend"
            android:layout_width="@dimen/search_friends_list_avatar_size"
            android:layout_height="@dimen/search_friends_list_avatar_size"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:src="@drawable/default_contact_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/name_tv_search_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="140dp"
                    android:singleLine="true"
                    android:textColor="#414040"
                    android:textSize="16sp" />

<!--                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/welearn_id"
                    android:textColor="#414040"
                    android:textSize="13sp" /> -->

                <TextView
                    android:id="@+id/userid_tv_search_friend"
                    android:layout_width="wrap_content"         android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"
                    android:textColor="#414040"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" >

                <TextView
                    android:id="@+id/city_tv_search_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#acacac"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/grade_tv_search_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#acacac"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"

android:layout_marginLeft="15dp"
        android:background="#dddddf" />
</LinearLayout>