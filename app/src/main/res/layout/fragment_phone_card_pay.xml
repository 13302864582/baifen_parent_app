<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <include layout="@layout/welearn_header_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="24dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/money_phone_card_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="12dp"
                android:background="#9e9e9e" />

            <com.daxiong.fun.view.SegmentedControl
                android:id="@+id/cardtype_phone_card_pay"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="11dip"
                android:textColor="#6B6B6B"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="18dp"
                android:inputType="number"
                android:maxLength="17"
                android:text="@string/pay_input_phone_card_snum"
                android:textColor="#414040"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/cardid_phone_card_pay"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="7dp"
                android:background="#ffffff"
                android:hint="@string/pay_input_phone_card_num"
                android:inputType="number"
                android:maxLength="22"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="13dp"
                android:text="@string/pay_input_phone_card_password"
                android:textColor="#414040"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/num_phone_card_pay"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="7dp"
                android:background="#ffffff"
                android:hint="@string/pay_recharge_password"
                android:inputType="numberPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="13dp"
                android:text="@string/pay_input_denomination"
                android:textColor="#414040"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/face_phone_card_pay"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="7dp"
                android:background="#ffffff"
                android:hint="@string/pay_denomination_hint"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000000" />

            <Button
                android:id="@+id/submit_phone_card_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="31dp"
                android:background="@drawable/bg_add_answer_btn_selector"
                android:text="@string/pay_now"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="27dp"
                android:text="@string/pay_tips_title"
                android:textColor="#414040"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="7dp"
                android:text="@string/phonecard_pay_text1"
                android:textColor="#9e9e9e"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="6dp"
                android:text="@string/phonecard_pay_text2"
                android:textColor="#9e9e9e"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>