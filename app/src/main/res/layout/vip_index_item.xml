<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:minHeight="85dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:layout_marginBottom="15dp"
        >
    <LinearLayout
        android:id="@+id/rl_vip_item_bg"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/bg_vip_normal"
        android:minHeight="85dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        />

        <ImageView
            android:id="@+id/iv_tag"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_jian"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="3张作业检查券"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color4d4d4d"
                />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/taocan_detail"
                android:textSize="14sp"
                android:textColor="@color/color8d8d8d"

                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:text="10"
            android:textColor="@color/colorf78c0e"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_doorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:minHeight="30dp"
            android:minWidth="50dp"
            android:padding="8dp"
            android:text="下订单"
            android:textColor="@drawable/selector_xiadingdan_btn_textcolor"
            android:background="@drawable/selector_vip_xiadingdan_btn"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>