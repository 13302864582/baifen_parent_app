<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.5dip"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/main_tab_bg_xian"
                android:gravity="center_vertical"
                android:visibility="visible" />

            <!-- 底部菜单start -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/layout_home"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_home"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/homework_icon_pre" />

                        <TextView
                            android:id="@+id/tv_home"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/main_tab_homework"
                            android:textColor="#57be6a"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_analysis"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_analysis"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/trend_icon" />

                        <TextView
                            android:id="@+id/tv_analysis"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="bottom|center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/main_tab_xueqing"
                            android:textColor="#1F1F1F"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- 放消息提醒start -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/unread_msg_point_iv_main"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_marginTop="11dp"
                            android:src="@drawable/ic_unread_redpoint"
                            android:visibility="invisible" />
                    </LinearLayout>
                    <!-- 放消息提醒end -->
                </FrameLayout>
                <!-- 中间凸起的部分start -->

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="top|center"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/main_tab_center" />
                    </LinearLayout>
                </FrameLayout>

                <!-- 中间凸起的部分end -->

                <FrameLayout
                    android:id="@+id/layout_quan"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_quan"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/growup_icon" />

                        <TextView
                            android:id="@+id/tv_quan"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="bottom|center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/main_tab_quan"
                            android:textColor="#1F1F1F"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_wo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_wo"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="5dp"
                            android:src="@mipmap/home_icon" />

                        <TextView
                            android:id="@+id/tv_wo"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="bottom|center"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/main_tab_wo"
                            android:textColor="#1F1F1F"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <!-- 底部菜单end -->
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mengban"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:alpha="0.96"
        android:visibility="gone">

        <include layout="@layout/layout_function" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_arcmenu"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="0dp"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_function"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="top|center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/main_tab_center" />
    </FrameLayout>

</RelativeLayout>