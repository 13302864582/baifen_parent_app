<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dingceng"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.daxiong.fun.view.FloatMoveView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center" >
            <!-- 添加主页布局的地方。 -->

            <com.daxiong.fun.view.XListView
                android:id="@+id/calendarListview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_call_teacher"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/call_teacher_selector"
            />
    </com.daxiong.fun.view.FloatMoveView>

</LinearLayout>