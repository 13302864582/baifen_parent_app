<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_vip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/colorf78c0e"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/ll_not_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_homework_quan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用作业券："
                android:maxLines="1"
                android:textColor="@color/color1e1e1e"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_question_quan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:text="可用难题券："
                android:textColor="@color/color1e1e1e"
                android:textSize="16sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_is_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shengyutianshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余天数："
                android:textColor="@color/color1e1e1e"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="详情"
                android:textColor="@color/color8d8d8d"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
