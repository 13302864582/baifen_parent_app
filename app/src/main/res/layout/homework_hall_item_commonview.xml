<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_homework_common_view"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dip" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/avatar_iv_hall_item_common"
                android:layout_width="@dimen/avatar_size_homework_check_common"
                android:layout_height="@dimen/avatar_size_homework_check_common"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_default_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@id/avatar_iv_hall_item_common"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nick_tv_hall_item_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:maxWidth="140dp"
                        android:singleLine="true"
                        android:text="昵称"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/asker_role_frameview_hall_item_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" >

                        <ImageView
                            android:id="@+id/vip_asker_iv_hall_item_common"
                            android:layout_width="28dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_vip_tag"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/ask_time_tv_hall_item_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:text="@string/homework_check_ask_time_text"
                    android:textColor="#808080"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/grade_subject_tv_hall_item_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                android:layout_marginTop="12dip"
                android:textColor="#808080"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" >

            <GridView
                android:id="@+id/img_list_container_gridview_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:splitMotionEvents="false" />

            <TextView
                android:id="@+id/state_homework_tv_hallitem"
                android:layout_width="51dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/state_homework_bg"
                android:gravity="center"
                android:text="已解答"
                android:textColor="#ffffff"
                android:textSize="11sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/tec_avatar_iv_hall_item"
                android:layout_width="@dimen/avatar_size_homeworkhall_item_common"
                android:layout_height="@dimen/avatar_size_homeworkhall_item_common"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dip"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_default_avatar" />

            <LinearLayout
                android:id="@+id/tec_info_container_hall_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tec_nick_tv_hall_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxWidth="140dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tec_school_tv_hall_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/answer_time_tv_hall_item_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:singleLine="true"
                android:textColor="#808080"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="11" />

            <LinearLayout
                android:id="@+id/collection_container_ll_hall_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/collection_icon_iv_hall_item"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/collect_ic_kongxin" />

                <TextView
                    android:id="@+id/collection_count_tv_hall_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="12"
                    android:textColor="#2c2c2c"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#c3ccd6" />

</LinearLayout>