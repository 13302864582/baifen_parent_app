<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_margin="12dp"
        android:src="@drawable/load_img" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_show"
        android:textColor="#1e1e1e"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_zhangshu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_show"
        android:textColor="#1e1e1e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zhangshu"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/iv_show"
        android:textColor="#8d8d8d"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/bt_suoquan"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/selector_jianchatext"
        android:gravity="center"
        android:text="索券"
        android:textColor="@drawable/selector_suoquan_font"
        android:textSize="14sp" />

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#dddddf" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:background="#dddddf" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"

        android:background="#dddddf" />
</RelativeLayout>