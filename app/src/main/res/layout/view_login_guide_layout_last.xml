<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_guide_three_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/phone_loginorreg_bt"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/selector_login_btn"
                android:gravity="center"
                android:maxHeight="25dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="立即体验"
                android:alpha="0"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/login_bt"
                style="@style/dialog_btn"
                android:text="@string/text_login_by_qq" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_todo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/start_todo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_start_ask_btn_selector" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:text="@string/login_guide_info"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical|right"

            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心心"
                android:textColor="@color/color4d4d4d"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/tv_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="学号309069 四年级"
                android:textColor="@color/color8d8d8d"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="江苏 无锡"
                android:textColor="@color/color8d8d8d"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏 无锡"
                android:textColor="@color/color1e1e1e"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_guide_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_guide_logo"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        />


</RelativeLayout>