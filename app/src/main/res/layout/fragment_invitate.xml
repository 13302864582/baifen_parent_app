<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <include layout="@layout/welearn_header_view"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="55dp"
        android:background="#ebebeb" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ebebeb"
            android:text="@string/invite_id"
            android:textColor="#414040"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/codenum_invitate_et" android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:inputType="number"
            android:maxLength="9"
            android:textColor="#414040"
            android:textSize="13sp" />
    </LinearLayout>
<!-- 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ebebeb"
        android:text="输入邀请ID可获得1学点（等价于1人民币）"
        android:textColor="#f46c6c"
        android:textSize="10sp" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="30dp"
        android:background="#ebebeb" >

        <Button
            android:id="@+id/jump_invitate_bt"
            android:layout_width="106dp"
            android:layout_height="43dp"
            android:background="@drawable/bg_invitate_bt_selector"
            android:gravity="center"
            android:text="@string/text_skip"
            android:textColor="#242424"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="11" />

        <Button
            android:id="@+id/submit_invitate_bt"
            android:layout_width="106dp"
            android:layout_height="43dp"
            android:background="@drawable/bg_invitate_bt_selector"
            android:gravity="center"
            android:text="@string/text_ok"
            android:textColor="#242424"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>